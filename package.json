{
  "name": "prelude",
  "version": "0.1.0",
  "description": "The open standard for expressing and maintaining machine-readable context about a codebase",
  "type": "module",
  "bin": {
    "prelude": "./bin/prelude.js"
  },
  "scripts": {
    "dev": "tsx watch bin/prelude.ts",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "keywords": [
    "cli",
    "context",
    "ai",
    "agents",
    "llm",
    "codebase"
  ],
  "author": "Rob Hocking <rob@useadjective.com>",
  "license": "MIT",
  "dependencies": {
    "cac": "^6.7.14",
    "chokidar": "^3.6.0",
    "colorette": "^2.0.20",
    "log-symbols": "^6.0.0",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "clipboardy": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "eslint": "^9.5.0",
    "prettier": "^3.3.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}